<%= form_tag url_for(action: 'create'), method: "post" do %>
  <%= label_tag 'Titre' %>
  <%= text_field_tag 'title', @title, class: "form-control" %>
  <br />
  <br />
  <%= label_tag 'Contenu' %>
  <%= text_area_tag 'content', @content, class: "form-control" %>
  <br />
  <br />
  <%= submit_tag "Créer potin !", class: "btn btn-primary" %> 
<% end %>

<% if @gossip.errors.any? %>
  <p style="padding-top: 2rem;">Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
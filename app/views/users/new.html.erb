<h2>Créez un compte The Gossip Project</h2>
<%= form_tag url_for(action: 'create'), method: "post" do %>
  <%= label_tag 'Email :' %>
  <%= email_field 'email', params[:email], class: "form-control" %>
  <br />
  <br />
  <%= label_tag 'Prénom :' %>
  <%= text_field_tag 'first_name', params[:first_name], class: "form-control" %>
  <br />
  <br />
  <%= label_tag 'Nom de famille :' %>
  <%= text_field_tag 'last_name', params[:last_name], class: "form-control" %>
  <br />
  <br />
  <%= label_tag 'Age :' %>
  <%= number_field 'age', params[:age], class: "form-control",  in: 7..99 %>
  <br />
  <br />
  <%= label_tag 'Description :' %>
  <%= text_area_tag 'description', params[:description], class: "form-control", in: 10..100 %>
  <br />
  <br />
  <%= label_tag 'Mot de passe :' %>
  <%= password_field_tag 'password', params[:password], class: "form-control" %>
  <br />
  <br />
  <%= submit_tag "S'inscrire sur The Gossip Project !", class: "btn btn-primary" %> 
<% end %>

<% if @user.errors.any? %>
  <p style="padding-top: 2rem;">L'inscription a échouée pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= flash[:alert] = message %></li>
    <% end %>
  </ul>
<% end %>
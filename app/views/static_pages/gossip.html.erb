
<h2 style="margin-bottom: 50px;">Potin n° <%= @gossip_id %> </h2>
 

<div>
  <h5>Prénom :</h5>
  <p><%= Gossip.find(@gossip_id).user.first_name %> </p>
  <h5>Nom :</h5>
  <p><%= Gossip.find(@gossip_id).user.last_name %> </p>
  <h5>Titre :</h5>
  <p><%= Gossip.find(@gossip_id).title %> </p>
  <h5>Contenu :</h5>
  <p> <%= Gossip.find(@gossip_id).content %>  </p>
  <h5>Crée le :</h5>
  <p> <%= Gossip.find(@gossip_id).created_at %>  </p>
</div>


<div>
  <p><%= link_to "En savoir plus sur l'auteur", author_path(Gossip.find(@gossip_id).user.id)%></p>
</div>